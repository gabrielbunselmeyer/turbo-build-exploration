{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es6"],
      "module": "commonjs",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,                               
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@math/*": ["math/src/*"],
        "@formatter/*": ["formatter/src/*"]
      }
    }
  }
  